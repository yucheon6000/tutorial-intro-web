---
interface Props {
    textAline?: string;
}

const { textAline } = Astro.props;
---

<p><slot /></p>
<style define:vars={{ textAline }}>
    p {
        font-size: 1rem;
        font-weight: 600;
        color: #ffbd28;
        margin-bottom: 1.875rem;
        text-align: var(--textAline);
    }
</style>
