---
interface Props {
    textAline?: string;
    color?: string;
    bottomMargin?: number;
}

const { textAline, color, bottomMargin } = Astro.props;
---

<p
    style={textAline == "center"
        ? "margin-left: -100%; margin-right: -100%;"
        : ""}
>
    <slot />
</p>
<style
    define:vars={{
        textAline,
        color: color || "var(--black)",
        bottomMargin: (bottomMargin != null ? bottomMargin : 3) + "rem",
    }}
>
    p {
        font-size: 2rem;
        font-weight: 700;
        text-wrap: nowrap;
        color: var(--color);
        margin-bottom: var(--bottomMargin);
        text-align: var(--textAline);
    }
</style>
